<div class="wrap-input100">
  <input
      class="input100 input-no-border"
      type="text"
      value={{get changeset "username"}}
      onchange={{action (changeset-set changeset "username") value="target.value"}}
      placeholder="Username">
  <span class="focus-input100">&emsp;Username</span>
  {{#if (get changeset.error "username")}}
    <span class="label-input100 "><i class="fas fa-exclamation-triangle"></i></span>
  {{/if}}
</div>


<div class="wrap-input100">
  <input
      class="input100 input-no-border"
      type="password"
      value={{get changeset "password"}}
      onchange={{action (changeset-set changeset "password") value="target.value"}}
      placeholder="Password">
  <span class="focus-input100">&emsp;Password</span>
  {{#if (get changeset.error "password")}}
    <span class="label-input100 "><i class="fas fa-exclamation-triangle"></i></span>
  {{/if}}
</div>



<div class="container-login100-form-btn">
  <button {{action onSubmit changeset}} class="login100-form-btn">
    Login
  </button>
</div>


<div class="flex-sb-m w-full pt-5 text-center">
  <a href="#" class="txt1" {{action onSignUp}}>
    <u>No account yet? Sign Up</u>
  </a>
</div>