{{!-- Header Content --}}
<div class="content-header">
  {{!-- Left Section --}}
  <div class="d-flex align-items-center"></div>
  {{!-- END Left Section --}}

  {{!-- Right Section --}}
  <div class="dropdown d-inline-block ml-2">
    <span class="d-none d-sm-inline-block ml-1 white-color">Welcome!&emsp;</span>
    <button type="button" class="btn btn-sm btn-dual" id="page-header-user-dropdown" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false" style="border: 0px solid;">
      <i class="far fa-user"></i>
      <span class="d-none d-sm-inline-block ml-1"></span>
      <i class="fa fa-fw fa-angle-down d-none d-sm-inline-block"></i>
    </button>
    <div class="dropdown-menu dropdown-menu-right p-0 border-0 font-size-sm" aria-labelledby="page-header-user-dropdown">
      <div class="p-2">
        <a class="dropdown-item d-flex align-items-center justify-content-between" href="" {{action "logout"}}>
          <span>Log Out</span>
          <i class="fas fa-sign-out-alt"></i>
        </a>
      </div>
    </div>
  </div>
  {{!-- END Right Section --}}
</div>
{{!-- END Header Content --}}

{{!-- Header Loader --}}
<div id="page-header-loader" class="overlay-header bg-white">
  <div class="content-header">
    <div class="w-100 text-center">
      <i class="fa fa-fw fa-circle-notch fa-spin"></i>
    </div>
  </div>
</div>
{{!-- END Header Loader --}}